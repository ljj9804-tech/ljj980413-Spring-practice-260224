<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--인텔리제이에서, 해당 경로 복사, , 해당 파일 우클릭, 참조 경로/복사해서, 맨밑에 -->
<!--구분자가 점으로 된걸 이용하기.-->
<mapper namespace="com.busanit501.ljj980413.spring_todo.mapper.TodoMapper">
    <select id="getTime" resultType="string">
        select now()
    </select>

    <insert id="insert">
        insert into spring_todo (title, dueDate, writer, finished) values ( #{title}, #{dueDate}, #{writer}, #{finished})
    </insert>

    <select id="selectAll" resultType="com.busanit501.ljj980413.spring_todo.domain.TodoVO">
        select * from spring_todo order by tno
    </select>

    <select id="selectOne" resultType="com.busanit501.ljj980413.spring_todo.domain.TodoVO">
        select * from spring_todo where tno = #{tno}
    </select>

    <delete id="delete">
        delete from spring_todo where tno = #{tno}
    </delete>

    <update id="update">
        update spring_todo set title = #{title}, dueDate = #{dueDate}, finished = #{finished} where tno = #{tno}
    </update>


</mapper>